{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UplinkCredential (minimal for test)",
  "type": "object",
  "required": ["type", "credentialSubject"],
  "properties": {
    "type": { "type": ["string", "array"] },

    "credentialSchema": {
      "type": ["string", "object"]
    },

    "credentialSubject": {
      "type": "object",
      "required": ["id", "upAddress"],
      "properties": {
        "id": { "type": "string" },
        "upAddress": { "type": "string" }
      },
      "additionalProperties": true
    },

    "proof": { "type": "object" },
    "proofs": { "type": "array" }
  },
  "additionalProperties": true
}
