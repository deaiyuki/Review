{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/deaiyuki/Review/main/uplink.context.json",
      "jsonSchema": "https://raw.githubusercontent.com/deaiyuki/Review/main/uplink.schema.json"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema"
  ],
  "properties": {
    "@context": { "type": ["string", "array", "object"] },
    "id": { "type": "string" },
    "type": { "type": ["string", "array"] },
    "issuer": {
      "type": ["string", "object"],
      "required": ["id"],
      "properties": {
        "id": { "type": "string", "format": "uri" }
      }
    },
    "issuanceDate": { "type": "string", "format": "date-time" },
    "credentialSchema": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string" }
      }
    },
    "credentialSubject": {
      "type": "object",
      "required": ["id", "upAddress"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "upAddress": { "type": "string" }
      }
    }
  }
}
